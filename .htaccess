# Saddleworth Blinds .htaccess Configuration
# Handles URL redirects, security, and performance optimizations

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Enable GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# URL Redirects - Handle trailing slash inconsistencies
# Redirect /folder/ to /folder.html for existing pages
RewriteEngine On

# Redirect area pages from /areas/location/ to /areas/location.html
RewriteRule ^areas/uppermill/?$ /areas/uppermill.html [R=301,L]
RewriteRule ^areas/diggle/?$ /areas/diggle.html [R=301,L]
RewriteRule ^areas/delph/?$ /areas/delph.html [R=301,L]
RewriteRule ^areas/greenfield/?$ /areas/greenfield.html [R=301,L]
RewriteRule ^areas/dobcross/?$ /areas/dobcross.html [R=301,L]
RewriteRule ^areas/lydgate/?$ /areas/lydgate.html [R=301,L]

# Redirect service pages from /service/ to /service.html
RewriteRule ^roller-blinds/?$ /roller-blinds.html [R=301,L]
RewriteRule ^venetian-blinds/?$ /venetian-blinds.html [R=301,L]
RewriteRule ^vertical-blinds/?$ /vertical-blinds.html [R=301,L]
RewriteRule ^vision-blinds/?$ /vision-blinds.html [R=301,L]
RewriteRule ^perfect-fit-blinds/?$ /perfect-fit-blinds.html [R=301,L]
RewriteRule ^shutters/?$ /shutters.html [R=301,L]
RewriteRule ^roman-blinds/?$ /roman-blinds.html [R=301,L]
RewriteRule ^curtains/?$ /curtains.html [R=301,L]

# Redirect other pages
RewriteRule ^contact/?$ /contact.html [R=301,L]
RewriteRule ^book-appointment/?$ /book-appointment.html [R=301,L]
RewriteRule ^about/?$ /about.html [R=301,L]
RewriteRule ^gallery/?$ /gallery.html [R=301,L]
RewriteRule ^privacy-policy/?$ /privacy-policy.html [R=301,L]
RewriteRule ^terms-conditions/?$ /terms-conditions.html [R=301,L]

# Security: Block access to sensitive files
<Files "webhook-config.php">
    Require all denied
</Files>

<Files "form_submissions.log">
    Require all denied
</Files>

<Files "deploy.log">
    Require all denied
</Files>

# Block access to development files
<FilesMatch "\.(py|bat|md)$">
    Require all denied
</FilesMatch>

# Custom Error Pages
ErrorDocument 404 /404.html

# Force HTTPS (uncomment when SSL is active)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent hotlinking of images
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?saddleworthblinds\.co\.uk [NC]
RewriteCond %{REQUEST_URI} \.(jpe?g|png|gif|webp)$ [NC]
RewriteRule \.(jpe?g|png|gif|webp)$ - [F]
